{
	"additional-repositories": [
		"multilib"
	],
	"custom-commands": [
		"mkinitcpio -P",
		"sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 25/' /etc/pacman.conf",
		"sed -i 's/^#IgnorePkg   =/IgnorePkg=xterm/' /etc/pacman.conf",
		"sed -i 's/^#Color/Color/' /etc/pacman.conf"
	],
	"archinstall-language": "English",
	"audio_config": {
		"audio": "pipewire"
	},
	"bootloader": "Grub",
	"config_version": "2.6.1",
	"debug": false,
	"disk_config": {
		"config_type": "default_layout",
		"device_modifications": [
			{
				"device": "/dev/sda"
			}
		]
	},
	"hostname": "hostname",
	"kernels": [
		"linux"
	],
	"plugin": "https://raw.githubusercontent.com/chrishazfun/installarch/main/plugin.py",
	"locale_config": {
		"kb_layout": "us",
		"sys_enc": "UTF-8",
		"sys_lang": "en_US"
	},
	"network_config": {
		"type": "nm"
	},
	"no_pkg_lookups": false,
	"ntp": true,
	"offline": false,
	"packages": [
		"zsh", "nano", "git", "jre-openjdk", "flatpak", "wget", "curl", "python", "python-pipx",

		"plasma-desktop", "plasma-nm", "plasma-pa", "plasma-thunderbolt", "kde-gtk-config", "kdeplasma-addons", "kscreen", "ksysguard", "powerdevil",
		"xdg-desktop-portal-kde", "xdg-user-dirs",

		"yt-dlp", "distrobox",
		"toot",
		"streamlink",
		"wine-gecko", "wine-mono", "wine-staging",
		"firefox", "qbittorrent",
		"meld", "picard", "homebank",
		"vlc", "obs-studio", "gimp", "ardour", "blender", "steam",
		"bluez", "bluez-libs", "bluez-utils",
		"qt6-multimedia-ffmpeg", "webp-pixbuf-loader", "ttf-croscore", "ffmpegthumbnailer"
	],
	"services": [
		"lightdm",
		"bluetooth"
	],
	"parallel downloads": 0,
	"profile_config": {
		"gfx_driver": "VMware / VirtualBox (open-source)",
		"greeter": null,
		"profile": {
			"custom_settings": {},
			"details": [],
			"main": "Xorg"
		}
	},
	"script": "guided",
	"silent": false,
	"swap": true,
	"skip-mirror-check": false,
	"timezone": "Australia/Sydney",
	"version": "2.6.1"
}