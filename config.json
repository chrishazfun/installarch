{
	"debug": true,
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"filesystem": "ext4",
	"hostname": "change-hostname",
	"kernels": ["linux"],
	"keyboard-layout": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"offline": false,
	"packages": [
		"bash", "bash-completion", "git", "jre-openjdk", "flatpak", "networkmanager", "wget",

		"lightdm", "lightdm-gtk-greeter", "lightdm-gtk-greeter-settings",

		"lxqt-about", "lxqt-admin", "lxqt-archiver", "lxqt-config", "lxqt-globalkeys", "lxqt-notificationd", "lxqt-openssh-askpass", "lxqt-panel", "lxqt-policykit", "lxqt-powermanagement", "lxqt-qtplugin", "lxqt-runner", "lxqt-session", "lxqt-sudo", "lxqt-themes", "obconf-qt", "openbox", "pavucontrol-qt", "pcmanfm-qt", "qterminal", "screengrab", "mousepad", "parole", "ristretto", "xdg-desktop-portal",

		"firefox", "neovim", "solaar", "vlc", "steam", "kdenlive", "obs-studio", "mpv", "libreoffice-fresh", "gimp", "ardour", "blender",
		"retroarch", "retroarch-assets-xmb", "retroarch-assets-ozone",
		"bleachbit", "kid3-qt", "meld", "picard", "homebank",
		"bluez", "bluez-libs", "bluez-utils",
		"wine-gecko", "wine-mono", "wine-staging",
		"btop", "neofetch", "yt-dlp",
		"qt6-multimedia-ffmpeg", "webp-pixbuf-loader", "ttf-croscore"
