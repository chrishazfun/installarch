{
	"additional-repositories": ["multilib"],
	"custom-commands": [
		"mkinitcpio -P",
		"sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 25/' /etc/pacman.conf",
		"sed -i 's/^#IgnorePkg   =/IgnorePkg=xterm/' /etc/pacman.conf",
		"sed -i 's/^#Color/Color/' /etc/pacman.conf"
	],
	"kernels": ["linux"],
	"plugin": "https://raw.githubusercontent.com/chrishazfun/archinstall-aur/main/archinstall_aur/__init__.py",
	"audio_config": {"audio": "pipewire"},
	"bootloader": "Grub",
	"hostname": "archlinux",
	"profile_config": {
		"gfx_driver": "All open-source (default)",
		"greeter": "lightdm",
		"profile": {
			"main": "Xorg"
		}
	},
	"packages": [
		"bash", "bash-completion", "nano", "vim", "git", "jre-openjdk", "flatpak", "networkmanager", "wget", "curl", "python", "python-pipx",

		"gdm",
		"gnome-console", "gnome-control-center", "gnome-disk-utility", "gnome-font-viewer", "gnome-keyring", "gnome-logs", "gnome-session", "gnome-settings-daemon", "gnome-shell", "gnome-shell-extensions", "gnome-system-monitor", "gnome-text-editor", "gnome-user-share", "nautilus", "rygel", "simple-scan", "tracker3-miners", "dconf-editor", "file-roller", "gnome-boxes", "gnome-notes", "gnome-sound-recorder", "seahorse",
		"gvfs", "gvfs-afc", "gvfs-goa", "gvfs-google", "gvfs-gphoto2", "gvfs-mtp", "gvfs-nfs", "gvfs-smb",
		"xdg-desktop-portal-gnome", "xdg-user-dirs-gtk",

		"yt-dlp", "distrobox",
		"toot",
		"streamlink",
		"wine-gecko", "wine-mono", "wine-staging",
		"firefox", "qbittorrent",
		"meld", "picard", "homebank",
		"vlc", "obs-studio", "gimp", "ardour", "blender", "steam",
		"bluez", "bluez-libs", "bluez-utils",
		"qt6-multimedia-ffmpeg", "webp-pixbuf-loader", "ttf-croscore", "calf", "mda.lv2", "lsp-plugins", "ffmpegthumbnailer"
	],
	"services": [
		"gdm",
		"bluetooth",
		"NetworkManager"
	],
	"debug": true,
	"swap": true,
	"keyboard-layout": "us",
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney",
	"ntp": true,
	"no_pkg_lookups": true,
	"skip-mirror-check": false,
	"nic": {
		"dhcp": true,
		"dns": null,
		"gateway": null,
		"iface": null,
		"ip": null,
		"type": "nm"
	},
	"mirror-region": {
		"Australia": {
			"http://archlinux.mirror.digitalpacific.com.au/$repo/os/$arch": true,
		}
	},
	"disk_encryption": null,
	"offline": false,
	"silent": false,
	"config_version": "2.5.2",
	"archinstall-language": "English"
}