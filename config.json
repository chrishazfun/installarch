{
	"debug": true,
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"custom-commands": [
		"sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 25/' /etc/pacman.conf",
		"sed -i 's/^#IgnorePkg   =/IgnorePkg=xterm/' /etc/pacman.conf",
		"sed -i 's/^#Color/Color/' /etc/pacman.conf",
		"cp -r /usr/share/doc/mpv/ ~/.config/",
		"xset r rate 200 30",
		"sed -i 's/^#unix_sock_group = \"libvirt\"/unix_sock_group = \"libvirt\"/' /etc/libvirt/libvirtd.conf",
		"sed -i 's/^#unix_sock_ro_perms = \"0777\"/unix_sock_ro_perms = \"0777\"/' /etc/libvirt/libvirtd.conf",
		"sed -i 's/^#unix_sock_rw_perms = \"0770\"/unix_sock_rw_perms = \"0770\"/' /etc/libvirt/libvirtd.conf",
		"usermod -aG libvirt #username"
	],
	"filesystem": "ext4",
	"hostname": "host",
	"kernels": ["linux"],
	"keyboard-layout": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"offline": false,
	"plugin": "https://raw.githubusercontent.com/Torxed/archinstall-aur/main/archinstall_aur/__init__.py",
	"plugin": "https://raw.githubusercontent.com/chrishazfun/archinstall-plugin/main/archinstall_plugin/__init__.py",
	"packages": [
		"bash", "bash-completion", "git", "jre-openjdk", "flatpak", "networkmanager", "wget", "yay-bin",

		"lightdm", "lightdm-gtk-greeter", "lightdm-gtk-greeter-settings",

		"lxqt-about", "lxqt-admin", "lxqt-archiver", "lxqt-config", "lxqt-globalkeys", "lxqt-notificationd", "lxqt-openssh-askpass", "lxqt-panel", "lxqt-policykit", "lxqt-powermanagement", "lxqt-qtplugin", "lxqt-runner", "lxqt-session", "lxqt-sudo", "lxqt-themes", "obconf-qt", "openbox", "pavucontrol-qt", "nemo", "qterminal", "screengrab", "vim", "filezilla", "xdg-desktop-portal-lxqt",

		"qemu", "virt-manager", "virt-viewer", "dnsmasq", "vde2", "bridge-utils", "libguestfs", "ovmf", "swtpm", "openbsd-netcat",
		"easyeffects", "calf", "mda.lv2", "lsp-plugins",

		"kid3-qt", "meld", "picard", "homebank",
		"solaar", "vlc", "obs-studio", "inkscape", "ardour", "blender",
		"bluez", "bluez-libs", "bluez-utils",
		"wine-gecko", "wine-mono", "wine-staging",
		"steam", "appimagelauncher",
		"btop", "yt-dlp",
		"qt6-multimedia-ffmpeg", "webp-pixbuf-loader", "ttf-croscore",

		"ungoogled-chromium-xdg-bin", "chromium-widevine",
		"chromium-extension-web-store", "chromium-extension-ublock-origin-bin", "chromium-extension-violentmonkey-git", "bitwarden-chromium",
		"yay-bin", "bleachbit-admin", "darling-bin", "flowblade", "bavarder", "kdocker", "xboxdrv", "ttf-ms-fonts", "shutter-encoder", "octopi", "flatseal", "protonup-qt-bin", "chiaki", "itch-setup-bin", "heroic-games-launcher-bin", "mcbelauncher-bin", "devtoolbox", "powershell-bin", "xbox-xcloud",

		"page.codeberg.JakobDev.jdSimpleAutostart", "org.tenacityaudio.Tenacity", "net.puddletag.puddletag", "com.github.k4zmu2a.spacecadetpinball"
	],
	"skip-mirror-check": false,
	"profile": "xorg",
	"services": [
		"lightdm",
		"bluetooth",
		"NetworkManager",
		"libvirtd"
	],
	"swap": true,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}