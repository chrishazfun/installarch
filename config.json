{
	"additional-repositories": ["multilib"],
	"custom-commands": [
		"mkinitcpio -P",
		"sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 25/' /etc/pacman.conf",
		"sed -i 's/^#IgnorePkg   =/IgnorePkg=xterm/' /etc/pacman.conf",
		"sed -i 's/^#Color/Color/' /etc/pacman.conf"
	],
	"kernels": ["linux"],
	"plugin": "https://raw.githubusercontent.com/chrishazfun/installarch/main/plugin.py",
	"audio_config": {"audio": "pipewire"},
	"bootloader": "Grub",
	"hostname": "hostname",
	"profile_config": {
		"gfx_driver": "All open-source (default)",
		"profile": {
			"main": "Xorg"
		}
	},
	"packages": [
		"zsh", "nano", "git", "jre-openjdk", "flatpak", "networkmanager", "wget", "curl", "python", "python-pipx",

		"plasma-desktop",
		"plasma-nm", "plasma-pa", "plasma-thunderbolt", "kde-gtk-config", "kdeplasma-addons", "kscreen", "ksysguard", "powerdevil",
		"xdg-desktop-portal-kde", "xdg-user-dirs",

		"yt-dlp", "distrobox",
		"toot",
		"streamlink",
		"wine-gecko", "wine-mono", "wine-staging",
		"firefox", "qbittorrent",
		"meld", "picard", "homebank",
		"vlc", "obs-studio", "gimp", "ardour", "blender", "steam",
		"bluez", "bluez-libs", "bluez-utils",
		"qt6-multimedia-ffmpeg", "webp-pixbuf-loader", "ttf-croscore", "ffmpegthumbnailer"
	],
	"services": [
		"gdm",
		"bluetooth",
		"NetworkManager"
	],
	"debug": true,
	"swap": true,
	"keyboard-layout": "us",
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney",
	"ntp": true,
	"no_pkg_lookups": true,
	"skip-mirror-check": false,
	"nic": {
		"dhcp": true,
		"dns": null,
		"gateway": null,
		"iface": null,
		"ip": null,
		"type": "nm"
	},
	"mirror-region": {
		"Australia": {
			"http://archlinux.mirror.digitalpacific.com.au/$repo/os/$arch": true
		}
	},
	"disk_encryption": null,
	"offline": false,
	"silent": false,
	"config_version": "2.5.2",
	"archinstall-language": "English"
}