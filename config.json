{
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"custom-commands": [
		"git clone https://aur.archlinux.org/yay-bin.git",
		"cd yay-bin",
		"makepkg -si",
		"yay -S --noconfirm sand-lxqt-theme kdocker pamac-nosnap shutter-encoder microsoft-edge-stable-bin chromium-widevine sublime-text-4 xboxdrv protonup-ng-git ttf-ms-fonts",
		"flatpak install -y --noninteractive org.firestormviewer.FirestormViewer com.steamgriddb.steam-rom-manager"
	],
	"filesystem": "ext4",
	"hostname": "sample",
	"kernels": ["linux"],
	"keyboard-language": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"offline": false,
	"packages": [
		"bash", "bash-completion", "git", "jre-openjdk", "flatpak", "networkmanager",
		"lightdm", "lximage-qt", "lxqt-about", "lxqt-admin", "lxqt-archiver", "lxqt-config", "lxqt-globalkeys", "lxqt-notificationd", "lxqt-openssh-askpass", "lxqt-panel", "lxqt-policykit", "lxqt-powermanagement", "lxqt-qtplugin", "lxqt-runner", "lxqt-session", "lxqt-sudo", "obconf-qt", "openbox", "pavucontrol-qt", "pcmanfm-qt", "qterminal", "screengrab", "breeze-icons", "sddm",
		"xdg-utils", "bluez", "bluez-libs", "bluez-utils", "wine-gecko", "wine-mono", "wine-staging", "webp-pixbuf-loader", "neofetch", "yt-dlp", "calf", "mda.lv2", "lsp-plugins",
		"vlc", "steam", "kdenlive", "obs-studio", "libreoffice-fresh", "gimp", "bleachbit", "easyeffects", "gimp", "btop", "ardour", "blender", "jami-qt", "meld", "gnome-disk-utility"
	],
	"profile": "xorg",
	"services": [
		"lightdm",
		"bluetooth",
		"NetworkManager"
	],
	"swap": true,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}