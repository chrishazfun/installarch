{
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"custom-commands": ["git clone https://github.com/chrishazfun/installarch"],
	"filesystem": "ext4",
	"hostname": "sample",
	"kernels": ["linux"],
	"keyboard-language": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"offline": false,
	"packages": [
		"bash", "bash-completion", "git", "jre-openjdk", "flatpak", "networkmanager",
		"lightdm", "lightdm-gtk-greeter", "lximage-qt", "lxqt-about", "lxqt-admin", "lxqt-archiver", "lxqt-config", "lxqt-globalkeys", "lxqt-notificationd", "lxqt-openssh-askpass", "lxqt-panel", "lxqt-policykit", "lxqt-powermanagement", "lxqt-qtplugin", "lxqt-runner", "lxqt-session", "lxqt-sudo", "obconf-qt", "openbox", "pavucontrol-qt", "pcmanfm-qt", "qterminal", "screengrab", "xscreensaver", "breeze-icons", "xdg-utils",
		"bluez", "bluez-libs", "bluez-utils", "webp-pixbuf-loader", "btop"
	],
	"profile": "xorg",
	"services": [
		"lightdm",
		"bluetooth",
		"NetworkManager"
	],
	"swap": true,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}