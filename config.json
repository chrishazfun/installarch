{
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"custom-commands": [
		"sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 25/' /etc/pacman.conf",
		"sed -i 's/^#Color/Color/' /etc/pacman.conf",
		"flatpak install -y --noninteractive com.steamgriddb.steam-rom-manager com.github.k4zmu2a.spacecadetpinball net.davidotek.pupgui2",
		"flatpak install -y --noninteractive in.bharatkalluri.shortcircuit com.jetbrains.DataGrip com.jetbrains.PhpStorm com.jetbrains.WebStorm"
	],
	"filesystem": "ext4",
	"hostname": "sample",
	"kernels": ["linux"],
	"keyboard-language": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"offline": false,
	"packages": [
		"bash", "bash-completion", "git", "jre-openjdk", "flatpak", "networkmanager",

		"lightdm", "lightdm-gtk-greeter", "lightdm-gtk-greeter-settings",

		"lxqt-admin", "lxqt-config", "lxqt-themes", "lxqt-globalkeys", "lxqt-openssh-askpass", "lxqt-panel", "lxqt-policykit", "lxqt-powermanagement", "lxqt-qtplugin", "lxqt-runner", "lxqt-session", "featherpad", "lxqt-sudo", "obconf-qt", "openbox", "pavucontrol-qt", "pcmanfm-qt", "qterminal", "breeze-icons", "dunst", "xscreensaver", "perl-lwp-protocol-https", "xdg-utils", "xdg-desktop-portal-lxqt", "xsettingsd", "webp-pixbuf-loader", "qt6-multimedia-ffmpeg",
		
		"qutebrowser", "solaar", "nano", "vlc", "steam", "kdenlive", "obs-studio", "libreoffice-fresh", "gimp", "bleachbit", "easyeffects", "ardour", "blender", "jami-qt", "meld", "gnome-disk-utility", "bitwarden",

		"bluez", "bluez-libs", "bluez-utils", "wine-gecko", "wine-mono", "wine-staging", "calf", "mda.lv2", "lsp-plugins", "neofetch", "yt-dlp"
	],
	"skip-mirror-check": true,
	"profile": "xorg",
	"services": [
		"lightdm",
		"bluetooth",
		"NetworkManager"
	],
	"swap": true,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}