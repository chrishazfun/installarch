{
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"custom-commands": [
		"wget https://raw.githubusercontent.com/chrishazfun/installarch/main/post.sh -O /mnt/archinstall/root/",
		"arch-chroot /mnt/archinstall sh /root/post.sh"
	],
	"filesystem": "ext4",
	"hostname": "host",
	"kernels": ["linux"],
	"keyboard-layout": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"offline": false,
	"packages": [
		"bash", "bash-completion", "git", "jre-openjdk", "flatpak", "networkmanager", "wget",

		"gdm",

		"gnome-session", "gnome-settings-daemon", "gnome-system-monitor", "gnome-shell", "xdg-user-dirs-gtk", "gnome-terminal", "nautilus", "sushi", "tracker3-miners", "gnome-text-editor", "dconf-editor", "gnome-keyring", "gnome-disk-utility", "gnome-font-viewer", "grilo-plugins", "rygel",

		"firefox", "vim", "solaar", "vlc", "steam", "kdenlive", "obs-studio", "libreoffice-fresh", "gimp", "easyeffects", "ardour", "blender",
		"retroarch", "retroarch-assets-xmb", "retroarch-assets-ozone",
		"bleachbit", "kid3-qt", "meld", "picard", "homebank",
		"bluez", "bluez-libs", "bluez-utils",
		"wine-gecko", "wine-mono", "wine-staging",
		"btop", "neofetch", "yt-dlp",
		"qt6-multimedia-ffmpeg", "calf", "mda.lv2", "lsp-plugins", "webp-pixbuf-loader", "axel", "ttf-croscore"
	],
	"skip-mirror-check": false,
	"profile": "xorg",
	"services": [
		"gdm",
		"bluetooth",
		"NetworkManager"
	],
	"swap": true,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}