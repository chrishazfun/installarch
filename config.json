{
	"debug": false,
	"additional-repositories": ["multilib"],
	"audio": "pipewire",
	"bootloader": "grub-install",
	"hostname": "archlinux",
	"custom-commands": [
		"curl -Sk https://raw.githubusercontent.com/chrishazfun/installarch/main/.bashrc >> ~/.bashrc && source ~/.bashrc",
		"sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 25/' /etc/pacman.conf",
		"sed -i 's/^#IgnorePkg   =/IgnorePkg=xterm/' /etc/pacman.conf",
		"sed -i 's/^#Color/Color/' /etc/pacman.conf",
		"nc=$(grep -c ^processor /proc/cpuinfo) && sed -i \"s/#MAKEFLAGS=\"-j2\"/MAKEFLAGS=\"-j$nc\"/g\" /etc/makepkg.conf",
		"nc=$(grep -c ^processor /proc/cpuinfo) && sed -i \"s/COMPRESSXZ=(xz -c -z -)/COMPRESSXZ=(xz -c -T $nc -z -)/g\" /etc/makepkg.conf"
	],
	"disk_encryption": null,
	"kernels": ["linux"],
	"keyboard-layout": "us",
	"mirror-region": "Australia",
	"ntp": true,
	"no_pkg_lookups": false,
	"offline": false,
	"plugin": "https://raw.githubusercontent.com/Torxed/archinstall-aur/main/archinstall_aur/__init__.py",
	"packages": [
		"bash", "bash-completion", "nano", "vim", "git", "jre-openjdk", "flatpak", "networkmanager", "wget", "curl", "python",

		"ly",
		"exo", "garcon",
		"thunar", "thunar-volman", "thunar-archive-plugin", "tumbler",
		"xfce4-session", "xfce4-panel", "xfce4-settings", "xfconf", "xfdesktop", "xfwm4",
		"xfce4-appfinder", "xfce4-power-manager", "xfce4-terminal", "xfce4-notifyd", "xfce4-screensaver", "xfce4-screenshooter",
		"xfce4-battery-plugin", "xfce4-genmon-plugin", "xfce4-mount-plugin", "xfce4-pulseaudio-plugin", "xfce4-xkb-plugin",
		"xdg-desktop-portal",

		"firefox",
		"qbittorrent", "sqlitebrowser",
		"meld", "picard", "homebank",
		"solaar", "vlc", "obs-studio", "inkscape", "ardour", "blender", "easyeffects", "steam",
		"yt-dlp",
		"wine-gecko", "wine-mono", "wine-staging",
		"bluez", "bluez-libs", "bluez-utils",
		"qt6-multimedia-ffmpeg", "webp-pixbuf-loader", "ttf-croscore", "calf", "mda.lv2", "lsp-plugins",

		"yay-bin"
	],
	"skip-mirror-check": false,
	"profile": "xorg",
	"services": [
		"ly",
		"bluetooth",
		"NetworkManager"
	],
	"swap": true,
	"silent": false,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}