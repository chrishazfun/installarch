	"skip-mirror-check": false,
	"profile": "xorg",
	"services": [
		"lightdm",
		"bluetooth",
		"NetworkManager"
	],
	"swap": true,
	"sys-encoding": "utf-8",
	"sys-language": "en_US",
	"timezone": "Australia/Sydney"
}